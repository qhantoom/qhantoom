-- addition
val sum : uint = 2 + 2;

-- subtraction
val difference : uint = 2 - 2;

-- multiplication
val product : uint = 2 * 2;

-- division
val quotient : uint = 2 / 1;

-- remainder
val remainder : uint = 2 % 1;

-- less than
val lt : uint = 2 < 1;

-- greater than
val gt : uint = 1 > 1;

-- less than or equal
val le : uint = 1 <= 1;

-- greater than or equal
val ge : uint = 1 >= 1;

-- equals
val eq : uint = 1 == 1;

-- not equals
val ne : uint = 1 != 1;